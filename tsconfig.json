// https://www.typescriptlang.org/tsconfig/
{
	// ./node_modules/@alanscodelog/tsconfigs/tsconfig.json
	// https://github.com/AlansCodeLog/tsconfigs
	"extends": "@alanscodelog/tsconfigs",
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"outDir": "dist",
		// "baseUrl": "src",
		"lib": [  "dom",  "esnext" ],
		"noErrorTruncation":true,
		"importsNotUsedAsValues": "remove", // todo - workaround for https://github.com/microsoft/TypeScript/issues/53302 - must remove from main config package
		"verbatimModuleSyntax": true,

		"moduleResolution": "bundler"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.vue",
		"tests/**/*.ts",
		// so eslint doesn't bother us, we don't build with tsc anyways, and to emit types, there's tsconfig.types.json
		"*.ts",
		"*.cjs",
		"*.js"
	],
	"exclude": [],
	"tsc-alias": {
		"resolveFullPaths": true // for esm compatibility
	}
}
